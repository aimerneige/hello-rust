root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[LICENSE]
trim_trailing_whitespace = false

[{Makefile,.gitmodules,.gitconfig}]
indent_style = tab

[*.{md,txt}]
indent_style = tab
trim_trailing_whitespace = false

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,css,less,sass,scss,vue,py}]
indent_style = space
indent_size = 4

[*.rs]
indent_style = space
indent_size = 4
